<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaXamarin.MainStart">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,0,0,0"
                    Android="0,0,0,0"
                    WinPhone="12,10,12,10">            
        </OnPlatform>        
    </ContentPage.Padding>

    <StackLayout>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Registro">
                    <EntryCell Label="Usuario" x:Name="BoxUsuario"/>
                    <SwitchCell Text="Capturar" x:Name="SwitchSave"/>
                    <ImageCell Text="Avengers" x:Name="ImageIron" ImageSource="IronMan.jpg"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>